<%- include('partials/header') %>

<div class="row">
  <div class="col-6 m-auto" style="background-color: rgb(255, 255, 255); padding: 2.5rem;">
    <h1 style="text-align: center;">Edit Stock of Medication</h1>

    <form action="/medications/<%=medication._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">Medication Name</label>
        <input
          type="text"
          name="name"
          autofocus
          class="form-control"
          value="<%= medication.name %>"
          required
          readonly
        />
      </div>

      <div class="form-group">
        <label for="strength">Strength</label>
        <input type="number" name="strength" class="form-control" value="<%= medication.strength %>" required readonly/>
      </div>

      <div class="form-group">
        <label for="packSize">Pack Size</label>
        <input type="number" name="packSize" class="form-control" value="<%= medication.packSize %>" required readonly/>
      </div>  

      <div class="form-group">
        <label for="totalPacks">Total Packs</label>
        <input type="number" name="totalPacks" class="form-control" value="<%= medication.totalPacks %>" required />
      </div> 
     
      <button type="submit" class="btn btn-primary float-right">Update</button>

      
      </form>

      <form action="/medications/<%= medication._id %>?_method=DELETE" method="POST">
        <button onClick="return confirm('Are you sure you want to delete this item?')" class="btn btn-outline-danger">
          Delete
        </button>
      </form>
  </div>
</div>

<%- include('partials/footer') %>